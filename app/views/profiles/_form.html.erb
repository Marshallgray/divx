<%= simple_form_for(@profile) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <p>I am a:
      <%= f.input :user_type, collection: ['Candidate', 'Recruiter'], label: false %>
    </p>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :picture %>
    <%= f.input :birth_date %>
  </div>


  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
