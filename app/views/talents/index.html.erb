<h1>Listing talent profiles</h1>


<%= form_tag talents_list_path, method: 'GET', :remote => true do %>

  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag 'Search' %>
<% end %>

<div id="items_grid">
  <%= render partial: 'talents_list', :locals => {talents: @talents} %>
</div>

<div class="form-actions">
  <%= link_to 'New Talent', new_talent_path, class: 'btn btn-success' %>
</div>
