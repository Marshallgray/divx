<%= simple_form_for(@company) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :company_name %>
  </div>

  <div class="form-inputs">
    <%= f.input :company_logo %>
  </div>

  <div class="form-inputs">
    <%= f.input :company_description %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
