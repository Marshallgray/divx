<h1>Listing companies</h1>


<%= form_tag companies_list_path, method: 'GET', :remote => true do %>

  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag 'Search' %>
<% end %>

<div id="items_grid">
  <%= render partial: 'companies_list', :locals => {companies: @companies} %>
</div>

<% if current_user.has_role? :recruiter %>
  <div class="form-actions">
    <%= link_to 'New Company', new_company_path, class: 'btn btn-success' %>
  </div>
<% end %>
