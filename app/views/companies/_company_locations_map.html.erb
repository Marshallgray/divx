<div id="map"></div>
<script>
  var map;
  var myLatLng = {lat: <%= @company.business_locations.first.latitude %>, lng: <%= @company.business_locations.first.longitude %>}
  function initMap() {
    map = new google.maps.Map(document.getElementById('map'), {
      center: myLatLng,
      zoom: 13,
      mapTypeId: google.maps.MapTypeId.SATELLITE
    });
    <% @company.business_locations.each do |location| %>
    var marker = new google.maps.Marker({
      position: {lat: <%= location.latitude %>, lng: <%= location.longitude %>},
      map: map,
      title: 'Hello World!'
    });
    <% end %>
  }
</script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCW3VAa0T4yjWeS2ojXtPWRLNnBLpwYQ48&callback=initMap"
async defer></script>
