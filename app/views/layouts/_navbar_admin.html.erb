<% if user_signed_in? %>
  <% if current_user.has_role? :admin %>
    <nav class="navbar navbar-light bg-faded">
      <a class="navbar-brand" href="/">Diversity X</a>

      <form class="form-inline pull-xs-left">
        <input class="form-control" type="text" placeholder="Search">
        <button class="btn btn-success-outline" type="submit">Search</button>
      </form>

      <ul class="nav navbar-nav pull-right">
        <li class="nav-item active">
          <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
        </li>

        <% if current_user.profile %>
        <li class="nav-item <%= 'active' if current_page?(profile_path(current_user.profile)) %>">
          <%= link_to 'My profile', profile_path(current_user.profile), class: 'nav-link' %>
        </li>

        <% else %>
        <li class="nav-item">
          <%= link_to 'Create profile', new_profile_path, class: 'nav-link' %>
          <% end %>
        </li>

        <li class="nav-item">
          <%= link_to 'Manage Companies', companies_path, class: 'nav-link' %>
        </li>

        <li class="nav-item">
          <%= link_to 'Manage talent', talents_path(current_user.talent), class: 'nav-link' %>
        </li>

        <li class="nav-item">
          <a class="nav-link" href="#">Manage Interviews</a>
        </li>

        <li class="nav-item">
          <%= link_to "Admin Panel", root_path, class: 'nav-link' %>
        </li>

        <li class="nav-item">
          <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'nav-link' %>
        </li>
    <% end %>
  <% end %>
    </ul>
