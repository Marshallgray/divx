<div id="map"></div>
<script>
  var map;
  var myLatLng = {lat: <%= @company.business_location.latitude %>, lng: <%= @company.business_location.longitude %>}
  function initMap() {
    map = new google.maps.Map(document.getElementById('map'), {
      center: myLatLng,
      zoom: 15,
      mapTypeId: google.maps.MapTypeId.SATELLITE
    });
    var marker = new google.maps.Marker({
      position: myLatLng,
      map: map,
      title: 'Hello World!'
    });
  }
</script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAel2sOgAjOR1qEWpL8Qe0eYiP2DYNtyk8&callback=initMap"
async defer></script>
