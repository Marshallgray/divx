<p id="notice"><%= notice %></p>

<h1>Interviews</h1>

<table>
  <thead>
    <tr>
      <th>Job role</th>
      <th>Talent</th>
      <th>Time</th>
      <th>Date</th>
      <th>Location</th>
      <th>Comments</th>
      <th>Approved</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @interviews.each do |interview| %>
      <tr>
        <td><%= interview.job_role %></td>
        <td><%= interview.talent %></td>
        <td><%= interview.time %></td>
        <td><%= interview.date %></td>
        <td><%= interview.location %></td>
        <td><%= interview.comments %></td>
        <td><%= interview.Approved %></td>
        <td><%= link_to 'Show', interview %></td>
        <td><%= link_to 'Edit', edit_interview_path(interview) %></td>
        <td><%= link_to 'Destroy', interview, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

