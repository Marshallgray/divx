<h1>Listing companies</h1>

<table class="table">
    <tr>
      <th>User</th>
      <th>Company_name</th>
        <th colspan="3"></th>
    </tr>

  <%= content_tag_for(:tr, @companies) do |company| %>
    <td><%= company.user %></td>
    <td><%= company.company_name %></td>
      <td><%= link_to 'Show', company %></td>
    <td><%= link_to 'Edit', edit_company_path(company), class: 'btn btn-edit' %></td>
    <td><%= link_to 'Delete', company, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-destroy' %></td>
  <% end %>
</table>


<div class="form-actions">
  <%= link_to 'New Company', new_company_path, class: 'btn btn-success' %>
</div>
